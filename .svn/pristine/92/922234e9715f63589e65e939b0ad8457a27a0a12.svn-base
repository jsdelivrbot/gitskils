/* CSS Document */

@charset "utf-8";
*:not(input) {
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	/*禁止苹果手机浏览器复制和粘贴功能，同时也导致文本框无法输入*/
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

body {
	background: #efefef;
	font-family: "Helvetica Neue", Helvetica, Microsoft Yahei, Hiragino Sans GB, WenQuanYi Micro Hei, sans-serif;
	line-height: 150%;
	margin: 0;
	padding: 0;
	color: #404040;
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

div {
	margin: 0;
	padding: 0;
}

h1,
h2,
h3,
h4,
h5,
h6,
ul,
li,
dl,
dt,
dd,
form,
img,
p {
	margin: 0;
	padding: 0;
	border: none;
	list-style-type: none;
}

a {
	margin: 0;
	padding: 0;
	color: #333;
	text-decoration: none;
}

.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}
